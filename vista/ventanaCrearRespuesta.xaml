<Window x:Class="vista.ventanaCrearRespuesta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vista"
        mc:Ignorable="d"
        Title="ventanaCrearRespuesta" Height="340" Width="680" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF9BE6F1">
        <Label Content="Ingrese el contenido de su respuesta: " HorizontalAlignment="Left" Height="39" Margin="30,31,0,0" VerticalAlignment="Top" Width="310" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="tb_ContenidoRespuesta" HorizontalAlignment="Center" Height="105" Margin="0,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="584"/>
        <Button x:Name="btn_AgregarRespuesta" Content="Agregar Respuesta" HorizontalAlignment="Center" Height="48" Margin="0,222,0,0" VerticalAlignment="Top" Width="216" Background="White" FontWeight="Bold" FontSize="16" Click="btn_AgregarRespuesta_Click"/>
        <Button x:Name="btn_Cancelar" Content="Cancelar" HorizontalAlignment="Left" Height="48" Margin="30,253,0,0" VerticalAlignment="Top" Width="134" FontWeight="Bold" FontSize="14" Background="White" Click="btn_Cancelar_Click"/>

    </Grid>
</Window>
